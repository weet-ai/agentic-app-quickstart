{
  "name": "Agentic App Quickstart",
  "image": "ghcr.io/astral-sh/uv:python3.13-bookworm",
  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [8000, 8080, 3000, 5000],
  // Add features to create vscode user and install common utilities
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "vscode",
      "uid": "1000",
      "gid": "1000",
      "upgradePackages": true
    }
  },
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "agilepartner.python-envy",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "python",
        "python.formatting.provider": "ruff",
        "python.linting.enabled": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        }
      }
    }
  },
  // Sync dependencies and setup pre-commit after container creation
  "postCreateCommand": "uv sync --group dev && uv run pre-commit install",
  "postStartCommand": "bash .devcontainer/script.sh",
  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root
  "remoteUser": "vscode",
  // Keep container running after VS Code is closed
  "shutdownAction": "none"
}
